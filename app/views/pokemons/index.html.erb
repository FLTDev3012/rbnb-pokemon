<h1>index des pokemons</h1>
<br>
<br>
<p><%= link_to "ajouter votre pokemon",  new_pokemon_path %></p>


<% @pokemons.each do |pokemon| %>
  <br>
  <br>
  <br>
  <div class="index-card-jaune">

    <div class="index-card">

      <div class="index-card-nom-level-pv">
            <!-- nom -->
            <p>nom</p>
            <!-- level -->
            <p>level</p>

            <!-- pv -->
            <p>pv</p>

      </div>

      <div class="index-card-photo">
            <!-- width max -->
      </div>

      <div class="index-card-description">
            <!-- descr -->
      </div>



    </div>

  </div>
  <p><%= pokemon.name %> lvl <%= pokemon.level %></p>
  <%= cl_image_tag pokemon.photo.key, height: 300, width: 400, crop: :fill %>
  <p><%= pokemon.description %></p>
  <p><%= pokemon.price %> pieces</p>

  <p><%= link_to "voir le pokemon",  pokemon_path(pokemon) %></p>

<% end %>
